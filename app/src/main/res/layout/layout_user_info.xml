<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_toolbar" />

    <ScrollView
        style="@style/Style_Scrollable"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingTop="20dp">

            <FrameLayout
                android:id="@+id/user_username_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用户名：" />

                    <EditText
                        android:id="@+id/user_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:inputType="text"
                        android:labelFor="@id/user_username"
                        android:maxLines="1"
                        android:orientation="horizontal"
                        android:textColor="#ff3b3b3b"
                        android:textColorHint="#ffcccccc"
                        android:textSize="16sp" />

                </LinearLayout>

                <View style="@style/Line_Vertical" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/user_password_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="密    码：" />

                    <EditText
                        android:id="@+id/user_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:inputType="textPassword"
                        android:labelFor="@id/user_password"
                        android:maxLines="1"
                        android:orientation="horizontal"
                        android:textColor="#ff3b3b3b"
                        android:textColorHint="#ffcccccc"
                        android:textSize="16sp" />

                </LinearLayout>

                <View style="@style/Line_Vertical" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/user_password_confirm_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="密    码：" />

                    <EditText
                        android:id="@+id/user_password_confirm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:inputType="textPassword"
                        android:labelFor="@id/user_password_confirm"
                        android:maxLines="1"
                        android:orientation="horizontal"
                        android:textColor="#ff3b3b3b"
                        android:textColorHint="#ffcccccc"
                        android:textSize="16sp" />

                </LinearLayout>

                <View style="@style/Line_Vertical" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/user_age_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="年    龄：" />

                    <EditText
                        android:id="@+id/user_age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:inputType="number"
                        android:labelFor="@id/user_age"
                        android:maxLines="1"
                        android:orientation="horizontal"
                        android:textColor="#ff3b3b3b"
                        android:textColorHint="#ffcccccc"
                        android:textSize="16sp" />

                </LinearLayout>

                <View style="@style/Line_Vertical" />


            </FrameLayout>

            <FrameLayout
                android:id="@+id/user_sex_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="性    别：" />

                    <EditText
                        android:id="@+id/user_sex"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:inputType="number"
                        android:labelFor="@id/user_age"
                        android:maxLines="1"
                        android:orientation="horizontal"
                        android:textColor="#ff3b3b3b"
                        android:textColorHint="#ffcccccc"
                        android:textSize="16sp" />

                </LinearLayout>

                <View style="@style/Line_Vertical" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/user_sex_edit_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dip">

                    <View
                        android:id="@+id/reg_sex_divider"
                        android:layout_width="1px"
                        android:layout_height="20dip"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="8dip"
                        android:layout_marginRight="8dip"
                        android:background="#d9d3c5" />

                    <RelativeLayout
                        android:id="@+id/user_layout_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@id/reg_sex_divider">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dip"
                            android:text="男"
                            android:textColor="#3b3b3b"
                            android:textSize="16sp" />

                        <RadioButton
                            android:id="@+id/user_male_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="8dip"
                            android:clickable="false"
                            android:focusable="false" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/user_layout_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/reg_sex_divider">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="8dip"
                            android:text="女"
                            android:textColor="#3b3b3b"
                            android:textSize="16sp" />

                        <RadioButton
                            android:id="@+id/user_female_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20dip"
                            android:clickable="false"
                            android:focusable="false" />
                    </RelativeLayout>
                </RelativeLayout>

                <View style="@style/Line_Vertical" />

            </FrameLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>